{
  "name": "dao-governance-contracts",
  "version": "1.0.0",
  "description": "Decentralized Autonomous Organization (DAO) governance smart contracts",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "node": "hardhat node",
    "deploy:local": "hardhat ignition deploy ignition/modules/DeployDAO.js --network hardhat",
    "deploy:sepolia": "hardhat ignition deploy ignition/modules/DeployDAO.js --network sepolia",
    "deploy:mumbai": "hardhat ignition deploy ignition/modules/DeployDAO.js --network mumbai",
    "deploy:bsc-testnet": "hardhat ignition deploy ignition/modules/DeployDAO.js --network bscTestnet",
    "verify:sepolia": "hardhat run scripts/verify.js --network sepolia",
    "verify:mumbai": "hardhat run scripts/verify.js --network mumbai",
    "verify:bsc-testnet": "hardhat run scripts/verify.js --network bscTestnet",
    "interact:local": "hardhat ignition deploy ignition/modules/InteractWithDAO.js --network hardhat",
    "verify-deployment:local": "hardhat ignition deploy ignition/modules/VerifyContracts.js --network hardhat",
    "flatten": "hardhat flatten contracts/DAOGovernor.sol > flattened/DAOGovernor_flattened.sol",
    "size": "hardhat size-contracts",
    "clean": "hardhat clean"
  },
  "keywords": [
    "dao",
    "governance",
    "blockchain",
    "smart-contracts",
    "solidity",
    "defi"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-ignition": "^0.15.12",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@openzeppelin/contracts": "^4.9.3",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "chai": "^4.2.0",
    "dotenv": "^16.0.0",
    "ethers": "^6.4.0",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.8",
    "solidity-coverage": "^0.8.1",
    "typechain": "^8.3.0"
  }
}
